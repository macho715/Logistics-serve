{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "EcrPushPullCreateDeleteScoped",
      "Effect": "Allow",
      "Action": [
        "ecr:CreateRepository",
        "ecr:DescribeRepositories",
        "ecr:GetAuthorizationToken",
        "ecr:BatchCheckLayerAvailability",
        "ecr:GetDownloadUrlForLayer",
        "ecr:BatchGetImage",
        "ecr:InitiateLayerUpload",
        "ecr:UploadLayerPart",
        "ecr:CompleteLayerUpload",
        "ecr:PutImage",
        "ecr:PutLifecyclePolicy",
        "ecr:GetLifecyclePolicy",
        "ecr:ListImages",
        "ecr:DescribeImages",
        "ecr:DeleteRepository"
      ],
      "Resource": [
        "arn:aws:ecr:us-east-1:341056671376:repository/samsung-logistics-mcp",
        "arn:aws:ecr:us-east-1:341056671376:repository/samsung-logistics-mcp-*"
      ]
    },
    {
      "Sid": "EcsFull",
      "Effect": "Allow",
      "Action": "ecs:*",
      "Resource": "*"
    },
    {
      "Sid": "NetworkAndELBFull",
      "Effect": "Allow",
      "Action": [
        "ec2:*",
        "elasticloadbalancing:*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "IamPassRoleRestricted",
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": [
        "arn:aws:iam::341056671376:role/ecsTaskExecutionRole",
        "arn:aws:iam::341056671376:role/ecsTaskRole",
        "arn:aws:iam::341056671376:role/ProjectECS-*",
        "arn:aws:iam::341056671376:role/samsung-logistics-*"
      ],
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": [
            "ecs.amazonaws.com",
            "ec2.amazonaws.com"
          ]
        }
      }
    },
    {
      "Sid": "IamManageRolesScoped",
      "Effect": "Allow",
      "Action": [
        "iam:CreateRole",
        "iam:AttachRolePolicy",
        "iam:DetachRolePolicy",
        "iam:DeleteRole",
        "iam:GetRole",
        "iam:ListAttachedRolePolicies",
        "iam:PutRolePolicy",
        "iam:DeleteRolePolicy",
        "iam:ListRolePolicies",
        "iam:ListInstanceProfilesForRole",
        "iam:GetRolePolicy"
      ],
      "Resource": [
        "arn:aws:iam::341056671376:role/ProjectECS-*",
        "arn:aws:iam::341056671376:role/samsung-logistics-*"
      ]
    },
    {
      "Sid": "CloudWatchLogsMetrics",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents",
        "logs:DescribeLogGroups",
        "logs:DescribeLogStreams",
        "logs:DeleteLogGroup",
        "logs:TagResource",
        "logs:ListTagsForResource",
        "cloudwatch:PutMetricData",
        "cloudwatch:GetMetricStatistics",
        "cloudwatch:ListMetrics",
        "cloudwatch:PutMetricAlarm",
        "cloudwatch:DescribeAlarms",
        "cloudwatch:DeleteAlarms"
      ],
      "Resource": "*"
    },
    {
      "Sid": "SNSTopicFullCRUD",
      "Effect": "Allow",
      "Action": [
        "sns:CreateTopic",
        "sns:Subscribe",
        "sns:Publish",
        "sns:GetTopicAttributes",
        "sns:DeleteTopic",
        "sns:TagResource",
        "sns:ListTagsForResource",
        "sns:GetSubscriptionAttributes",
        "sns:SetSubscriptionAttributes",
        "sns:Unsubscribe"
      ],
      "Resource": "*"
    },
    {
      "Sid": "KMSCryptoAdminScoped",
      "Effect": "Allow",
      "Action": [
        "kms:CreateKey",
        "kms:DescribeKey",
        "kms:GetKeyPolicy",
        "kms:PutKeyPolicy",
        "kms:EnableKey",
        "kms:DisableKey",
        "kms:ScheduleKeyDeletion",
        "kms:CreateAlias",
        "kms:DeleteAlias",
        "kms:ListAliases",
        "kms:TagResource",
        "kms:UntagResource",
        "kms:ListResourceTags",
        "kms:GetKeyRotationStatus",
        "kms:EnableKeyRotation"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AutoScalingFull",
      "Effect": "Allow",
      "Action": "application-autoscaling:*",
      "Resource": "*"
    },
    {
      "Sid": "AllowTagIAMRoles",
      "Effect": "Allow",
      "Action": [
        "iam:TagRole",
        "iam:UntagRole",
        "iam:ListRoleTags"
      ],
      "Resource": "arn:aws:iam::341056671376:role/*"
    },
    {
      "Sid": "AllowKMSTagResourceOnly",
      "Effect": "Allow",
      "Action": "kms:TagResource",
      "Resource": "arn:aws:kms:us-east-1:341056671376:key/*"
    },
    {
      "Sid": "AllowCreateServiceLinkedRolesForNeededServices",
      "Effect": "Allow",
      "Action": "iam:CreateServiceLinkedRole",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "iam:AWSServiceName": [
            "ecs.amazonaws.com",
            "elasticloadbalancing.amazonaws.com",
            "ecs.application-autoscaling.amazonaws.com"
          ]
        }
      }
    },
    {
      "Sid": "AllowPutRetentionPolicyForEcsLogs",
      "Effect": "Allow",
      "Action": [
        "logs:PutRetentionPolicy",
        "logs:CreateLogGroup",
        "logs:DescribeLogGroups",
        "logs:TagLogGroup",
        "logs:UntagLogGroup",
        "logs:ListTagsLogGroup"
      ],
      "Resource": [
        "arn:aws:logs:us-east-1:341056671376:log-group:/ecs/samsung-logistics-mcp",
        "arn:aws:logs:us-east-1:341056671376:log-group:/ecs/samsung-logistics-mcp:*"
      ]
    },
    {
      "Sid": "AllowManageSnsTopicAttributes",
      "Effect": "Allow",
      "Action": [
        "sns:SetTopicAttributes",
        "sns:GetTopicAttributes",
        "sns:ListTagsForResource",
        "sns:AddPermission",
        "sns:RemovePermission",
        "sns:SetTopicAttributes"
      ],
      "Resource": "arn:aws:sns:us-east-1:341056671376:samsung-logistics-alerts"
    }
  ]
}
